<!DOCTYPE html>
<html>
<head>
  <title>Giftdriver</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
 
  <link href='http://fonts.googleapis.com/css?family=Droid+Sans|Droid+Serif:400,700|Oleo+Script:400,700|Roboto+Condensed:400,700' rel='stylesheet' type='text/css'>

  <%= csrf_meta_tags %>
</head>
<body>
  <%= render "shared/top_nav" %>
  <div class="container">
    <% if flash[:notice] %>
      <p class="alert alert-info"><%= notice %></p>
    <% end %>
    <% if flash[:alert] %>
      <p class="alert"><%= alert %></p>
    <% end %>
     <% if flash[:error] %>
      <ul>
      <div class="alert"><% flash[:error].each do |error| %>
        <li><%= error %></li>
        <% end %>
      </div>
    </ul>
    <% end %>
    <%= yield %>
  <%= yield :scripts %> 
  </div>
  <%= render "shared/footer" %>
</body>
</html>
